<?xml version="1.0" encoding="utf-8"?>
<!--
  For more information on how to configure your ASP.NET application, please visit
  https://go.microsoft.com/fwlink/?LinkId=169433
  -->
<configuration>
	<appSettings>
		<!-- Disable Unobtrusive Validation Mode to avoid jQuery dependency -->
		<add key="vs:EnableBrowserLink" value="false" />
		<add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
	</appSettings>

	<system.web>
		<compilation debug="true" targetFramework="4.7.2" />
		<httpRuntime targetFramework="4.7.2" maxRequestLength="10240" executionTimeout="300" />

		<!-- Disable client-side validation to avoid jQuery dependency -->
		<pages validateRequest="false" enableEventValidation="false" />
	</system.web>

	<system.webServer>
		<defaultDocument>
			<files>
				<clear />
				<add value="FirstPage.aspx" />
				<add value="Default.aspx" />
				<add value="index.html" />
			</files>
		</defaultDocument>

		<security>
			<requestFiltering>
				<requestLimits maxAllowedContentLength="10485760" />
			</requestFiltering>
		</security>
	</system.webServer>
</configuration>
